@*<input id="hdoDetailSearch" ng-model="HdoDetailSearch" type="text" class="form-control search" placeholder="Search...">*@


    <table class="table table-hover general-table">
        <thead class="grid-top-panel">
            <tr>
                <th>
                    <div class="roundedTwo">
                        @*<input type="checkbox" ng-model="selectedAll" ng-click="checkAll()" />*@
                    </div>
                </th>
                <th style="display:none">PI ID</th>
                <td style="display:none">Item ID</td>
                <td style="display:none">Company ID</td>
                @*<th>Style No</th>
                    <th>Description</th>*@

                <th>Style</th>
                @*<th style="display:none">Type</th>*@

                <th>Buyer Style</th>
                <th>Exp. Delivery</th>
                <th>Quantity({{UnitName}})</th>
                
                <th>Rate ($)</th>
                <th>Amount ($)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="dataModel in ListPIDetails">
                <td>
                    @*{{dataModel.ProductName}}*@
                    <div class="roundedTwo">
                        <input type="checkbox" @*ng-click="toggleSelection()"*@ readonly disabled
                               ng-model="dataModel.Selected" />
                    </div>
                </td>
                <td style="display:none">{{dataModel.PIID}}</td>
                <td style="display:none">{{dataModel.ItemID}}</td>
                <td style="display:none">{{dataModel.CompanyID}}</td>
                @*<td> {{dataModel.ArticleNo}}</td>
                    <td>
                        <input type="text" id="txtDescription" name="txtDescription" class="form-control" style="width:250px;"
                               ng-model="dataModel.Description" readonly/>

                    </td>*@

                <td > 
                    <b>{{dataModel.ArticleNo}}</b>
                </td>

                <td>
                    <input type="text" id="txtGrdBuyerStyle" name="txtGrdBuyerStyle" class="form-control" style="width:100px;"
                           ng-model="dataModel.BuyerStyle"  readonly/>
                </td>

                <td>
                    <input type="text" min="minDate" placeholder="dd/MM/yyyy" datepicker-popup="dd/MM/yyyy" disabled 
                           ng-model="dataModel.ExpDeliveryDate" @*is-open="openedSD[$index]"*@
                           ng-required="true" @*ng-change="PIDateCheck(dataModel); LoadArticlenDatewiseCapacity(dataModel)"*@ ng-readonly="true" />
                </td>

                <td>
                    <input type="number" id="txtInputQty" name="txtInputQty" class="form-control" style="width:100px;" readonly
                           ng-model="dataModel.InputQty" min="0.00" @*ng-blur="calculation(dataModel)"*@ />
                </td>
               
                <td>
                    <input type="number" id="txtGrdRate" name="txtGrdRate" class="form-control" style="width:90px;" readonly
                           ng-model="dataModel.UnitPrice" min="0.00" @*ng-blur="calculation(dataModel)"*@ />
                </td>
                <td>{{dataModel.Amount|number:2}}</td>


                <td style="text-align:right; color:white">
                    <span class="label label-success label-mini">
                        <a href="javascript:void(0);" ng-href="#PIModal" data-toggle="modal" class="bs-tooltip" title="Show Item">
                            <i class="icon-search" ng-click="CallgetPIDetails(dataModel)">&nbsp;Item Details</i>
                        </a>
                    </span>
                </td>
               
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>Total:</td>
                <td>{{TotalQuantity | number:2}}</td>
                <td></td>
                <td>{{TotalAmount | number:2}}</td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <p ng-show="(ListPIDetails).length == 0" style="color:red">Nothing found!</p>

<div class="loadmore">
    <div ng-show="loaderMore" ng-class="result">
        {{lblMessage}}
    </div>
    <div ng-show="scrollended" ng-class="result">
        {{lblMessage}}
    </div>
</div>

