    @*<script src="~/Areas/Production/ScriptsNg/Controllers/FabricSetUpConfigurationCtrl.js"></script>*@
<script src="~/Areas/Production/ScriptsNg/Controllers/BeamCanEntryCTRL.js"></script>

}

